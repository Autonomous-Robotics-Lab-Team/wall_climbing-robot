<launch>
    <arg name="paused" default="false"/>
    <arg name="user_debug" default="false"/>
    <arg name="wname" default="move_base"/>
    <arg name="use_sim_time" default="true"/>
    <arg name="gui" default="true"/>
    <arg name="headless" default="false"/>
    <arg name="debug" default="false"/>
    <arg name="run_trajectory_example" default="false" />

    <include file="$(find gazebo_ros)/launch/empty_world.launch">
        <arg name="world_name" value="$(find sizu_gazebo)/worlds/$(arg wname).world"/>
        <arg name="debug" value="$(arg debug)"/>
        <arg name="gui" value="$(arg gui)"/>
        <arg name="paused" value="$(arg paused)"/>
        <arg name="use_sim_time" value="$(arg use_sim_time)"/>
        <arg name="headless" value="$(arg headless)"/>
    </include>    

    <!-- 机器人描述 -->
    <param name="robot_description" command="$(find xacro)/xacro --inorder '$(find sizu_gazebo)/urdf/robot.xacro' DEBUG:=$(arg user_debug)" />

    <!-- 机器人模型注入到 Gazebo -->
    <node name="spawn_model" pkg="gazebo_ros" type="spawn_model" args="-param robot_description -urdf -model sizu " />

    <!-- 加载控制器配置 -->
    <rosparam command="load" file="$(find sizu_gazebo)/config/sizu_control.yaml"/> 
    
    <!-- 启动轨迹控制器 -->
    <node name="controller_spawner" pkg="controller_manager" type="spawner"
          args="joint_state_controller
                leg_trajectory_controller"
          output="screen"/>

    <!-- 启动轨迹控制示例节点（默认不启动；设置 run_trajectory_example:=true 可启用） -->
    <node if="$(arg run_trajectory_example)" name="trajectory_example" pkg="sizu_gazebo" type="trajectory_example_node" output="screen"/>

    <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" />

    <!-- 启动运动控制节点 -->
    <node name="sizu_movement" pkg="sizu_movement" type="main" output="screen">
        <param name="base_frame_id" value="base" />
    </node>

    <node name="rviz" pkg="rviz" type="rviz" args="-d $(find sizu_gazebo)/config/sizu.rviz" />

</launch>



