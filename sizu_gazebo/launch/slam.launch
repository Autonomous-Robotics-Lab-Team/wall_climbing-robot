<launch>
  <!-- Common args -->
  <arg name="wname" default="move_base"/>
  <arg name="gui" default="true"/>
  <arg name="headless" default="false"/>
  <arg name="use_sim_time" default="true"/>
  <arg name="run_trajectory_example" default="false"/>

  <!-- Bring up Gazebo + robot (reuses gazebo.launch) -->
  <include file="$(find sizu_gazebo)/launch/gazebo.launch">
    <arg name="wname" value="$(arg wname)"/>
    <arg name="gui" value="$(arg gui)"/>
    <arg name="headless" value="$(arg headless)"/>
    <arg name="use_sim_time" value="$(arg use_sim_time)"/>
    <arg name="run_trajectory_example" value="$(arg run_trajectory_example)"/>
  </include>

  <!-- Use sim time for downstream nodes -->
  <param name="use_sim_time" value="$(arg use_sim_time)"/>

  <!-- SLAM (gmapping) using /scan from lidar_link; odom from sizu_movement -->
  <node pkg="gmapping" type="slam_gmapping" name="slam_gmapping" output="screen">
    <remap from="scan" to="/scan"/>
    <param name="base_frame" value="base_link"/>
    <param name="odom_frame" value="odom"/>
    <param name="map_frame" value="map"/>
    <param name="delta" value="0.05"/>
    <param name="linearUpdate" value="0.1"/>
    <param name="angularUpdate" value="0.1"/>
    <param name="temporalUpdate" value="0.5"/>
    <param name="xmin" value="-20.0"/>
    <param name="ymin" value="-20.0"/>
    <param name="xmax" value="20.0"/>
    <param name="ymax" value="20.0"/>
    <param name="map_update_interval" value="2.0"/>
  </node>

 
</launch>
