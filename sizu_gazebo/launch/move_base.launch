<launch>
  <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen" clear_params="true">
    <rosparam file="$(find sizu_gazebo)/config/costmap_common_params.yaml" command="load" ns="global_costmap" />
    <rosparam file="$(find sizu_gazebo)/config/costmap_common_params.yaml" command="load" ns="local_costmap" />
    <rosparam file="$(find sizu_gazebo)/config/local_costmap_params.yaml" command="load" />
    <rosparam file="$(find sizu_gazebo)/config/global_costmap_params.yaml" command="load" />
    <rosparam file="$(find sizu_gazebo)/config/base_local_planner_params.yaml" command="load" />
  </node>

  <param name="use_sim_time" value="true"/>

  <include file="$(find sizu_gazebo)/launch/gazebo.launch"/>

  <!-- AMCL for localization: map -> odom using /scan and odom from sizu_movement -->
  <node pkg="amcl" type="amcl" name="amcl" output="screen">
    <remap from="scan" to="/scan" />
    <param name="base_frame_id" value="base_link" />
    <param name="odom_frame_id" value="odom" />
    <param name="global_frame_id" value="map" />
    <param name="min_particles" value="100" />
    <param name="max_particles" value="5000" />
    <param name="kld_err" value="0.05" />
    <param name="kld_z" value="0.99" />
    <param name="update_min_d" value="0.05" />
    <param name="update_min_a" value="0.05" />
    <param name="resample_interval" value="1" />
    <param name="laser_max_beams" value="60" />
    <param name="laser_z_hit" value="0.5" />
    <param name="laser_z_rand" value="0.5" />
    <param name="odom_model_type" value="diff" />
    <param name="gui_publish_rate" value="10.0" />
  </node>
 
  <node name="map_server" pkg="map_server" type="map_server" args="$(find sizu_gazebo)/map/nav.yaml" />


</launch>